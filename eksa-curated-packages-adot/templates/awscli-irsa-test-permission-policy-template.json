{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EKSAConfigBucketList",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::{{CLUSTER_CONFIG_S3_BUCKET}}",
                "arn:aws:s3:::{{CLUSTER_CONFIG_S3_BUCKET}}/*"
            ]            
        }
    ]
}