{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "{{OIDCPROVIDER}}"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                 "{{ISSUER_HOSTPATH}}:sub": ["system:serviceaccount:{{NAMESPACE}}:{{SERVICE_ACCOUNT}}"]
                }
               }
        }
    ]
}
